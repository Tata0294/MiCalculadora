<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BotonBase" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/cal.btn.textSize</item>
    </style>

    <style name="BotonMD" parent="BotonBase">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="BotonMDDark" parent="BotonBase">
        <item name="colorButtonNormal">@color/gray_700</item>
    </style>

    <style name="BotonMDDarker" parent="BotonBase">
        <item name="colorButtonNormal">@color/gray_800</item>
    </style>

    <style name="BotonMDDanger" parent="BotonBase">
        <item name="colorButtonNormal">@color/red_500</item>
    </style>

</resources>
